<%- include ../layouts/header.ejs %> 
    <br>
    <br>
    <a href="/libros/crear" class="btn btn-primary" type="button">Agregar</a>
    <table class="table table-light">
      <thead class="thead-light">
        <tr>
          <th>#</th>
          <th>Nombre</th>
          <th>Imagen</th>
          <th>Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% for( let index = 0; index < libro.length; index++ ) { %>
          <tr>
            <td scope="row"><%=libro[index].id%></td>
            <td><%=libro[index].titulo%></td>
            <td><img src="images/<%=libro[index].imagen%>" height="100" class="img-thumnnail"></td>
            
            <td>
              <div class="btn-group-vertical" role="group" aria-label="Vertical button Group">
                <form action="/libros/editar/<%=libro[index].id%>" method="post">
                  <button type="submit" class="btn btn-warning">Editar</button>
                </form>
  
               </div>

              | 
              
             <div class="btn-group-vertical" role="group" aria-label="Vertical button Group">
              <form action="/libros/eliminar/<%=libro[index].id%>" method="post">
                <button type="submit" class="btn btn-danger">Eliminar</button>
              </form>

             </div>
            
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <%- include ../layouts/footer.ejs %> 