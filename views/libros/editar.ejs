<%- include ../layouts/header.ejs %> 

    <form action="../actualizar/" method="post" enctype="multipart/form-data">

        <input type="hidden" name="id" value="<%=libro.id%>">

    <div class="form-group">
        <label for="">Nombre</label>
        <input type="text" name="nombre" id="my-input" class="form-control" placeholder="titulo" value="<%=libro.titulo%>">

    </div>

    <div class="form-group">
        <label for="">Imagen</label>
        <img src="../../images/<%=libro.imagen%>" width="100" class="img-thumbnail">
        <input type="file" class="form-control-file" name="archivo" id="my-input">
   
    </div>

    <button type="submit" class="btn btn-primary" data-toggle="button" aria-pressed="false" autocomplete="off">Agregar</button>

</form>

